{
  "version": "1.0.0",
  "description": "Default patterns for Secret Detector",
  "patterns": {
    "aws_access_key": {
      "regex": "(?i)(AKIA[0-9A-Z]{16})",
      "severity": "CRITICAL",
      "description": "AWS Access Key ID (AKIA prefix)"
    },
    "aws_secret_key": {
      "regex": "(?i)(aws[_-]?secret[_-]?access[_-]?key|aws_secret_key)\\s*[=:]\\s*['\\\"]?[A-Za-z0-9/+=]{40}['\\\"]?",
      "severity": "CRITICAL",
      "description": "AWS Secret Access Key"
    },
    "github_token_classic": {
      "regex": "(?i)(ghp_[a-zA-Z0-9_]{36,255})",
      "severity": "CRITICAL",
      "description": "GitHub Personal Access Token (Classic)"
    },
    "github_token_oauth": {
      "regex": "(?i)(gho_[a-zA-Z0-9_]{36,255})",
      "severity": "CRITICAL",
      "description": "GitHub OAuth Token"
    },
    "github_app_token": {
      "regex": "(?i)(ghu_[a-zA-Z0-9_]{36,255})",
      "severity": "CRITICAL",
      "description": "GitHub App Installation Access Token"
    },
    "private_key_rsa": {
      "regex": "-----BEGIN RSA PRIVATE KEY-----",
      "severity": "CRITICAL",
      "description": "RSA Private Key"
    },
    "private_key_dsa": {
      "regex": "-----BEGIN DSA PRIVATE KEY-----",
      "severity": "CRITICAL",
      "description": "DSA Private Key"
    },
    "private_key_ec": {
      "regex": "-----BEGIN EC PRIVATE KEY-----",
      "severity": "CRITICAL",
      "description": "EC Private Key"
    },
    "private_key_openssh": {
      "regex": "-----BEGIN OPENSSH PRIVATE KEY-----",
      "severity": "CRITICAL",
      "description": "OpenSSH Private Key"
    },
    "slack_token_bot": {
      "regex": "(?i)(xoxb-[0-9]{10,13}-[0-9]{10,13}-[a-zA-Z0-9]{24,34})",
      "severity": "CRITICAL",
      "description": "Slack Bot Token"
    },
    "slack_token_user": {
      "regex": "(?i)(xoxp-[0-9]{10,13}-[0-9]{10,13}-[a-zA-Z0-9]{24,34})",
      "severity": "CRITICAL",
      "description": "Slack User Token"
    },
    "slack_webhook": {
      "regex": "(?i)(https://hooks\\.slack\\.com/services/T[A-Z0-9]+/B[A-Z0-9]+/[A-Za-z0-9]+)",
      "severity": "HIGH",
      "description": "Slack Webhook URL"
    },
    "stripe_api_key_live": {
      "regex": "(?i)(sk_live_[0-9a-zA-Z]{20,})",
      "severity": "CRITICAL",
      "description": "Stripe Live API Key"
    },
    "stripe_api_key_test": {
      "regex": "(?i)(sk_test_[0-9a-zA-Z]{20,})",
      "severity": "HIGH",
      "description": "Stripe Test API Key"
    },
    "stripe_restricted_key": {
      "regex": "(?i)(rk_live_[0-9a-zA-Z]{20,})",
      "severity": "HIGH",
      "description": "Stripe Restricted API Key"
    },
    "jwt_token": {
      "regex": "(?i)(eyJ[A-Za-z0-9_-]+\\.[A-Za-z0-9_-]+\\.[A-Za-z0-9_-]+)",
      "severity": "MEDIUM",
      "description": "JWT Token (JSON Web Token)"
    },
    "database_url_postgres": {
      "regex": "(?i)(postgres://[^\\s]+)",
      "severity": "HIGH",
      "description": "PostgreSQL Connection String"
    },
    "database_url_mysql": {
      "regex": "(?i)(mysql://[^\\s]+)",
      "severity": "HIGH",
      "description": "MySQL Connection String"
    },
    "database_url_mongodb": {
      "regex": "(?i)(mongodb\\+?srv://[^\\s]+)",
      "severity": "HIGH",
      "description": "MongoDB Connection String"
    },
    "redis_url": {
      "regex": "(?i)(redis://:[^\\s]+)",
      "severity": "HIGH",
      "description": "Redis Connection String"
    },
    "password_assignment": {
      "regex": "(?i)(password|passwd|pwd|pwd_|secret)\\s*[=:]\\s*['\\\"]([^'\\\"]+)['\\\"]",
      "severity": "HIGH",
      "description": "Password in plain text assignment"
    },
    "api_key_generic": {
      "regex": "(?i)(api[_-]?key|apikey|api_token|api-secret)\\s*[=:]\\s*['\\\"]?([\\w\\-._]+)['\\\"]?",
      "severity": "HIGH",
      "description": "Generic API Key"
    },
    "google_api_key": {
      "regex": "(?i)(AIza[0-9A-Za-z\\-_]{35})",
      "severity": "HIGH",
      "description": "Google API Key"
    },
    "google_oauth_id": {
      "regex": "(?i)([0-9]{12,}-[a-z0-9]{32}\\.apps\\.googleusercontent\\.com)",
      "severity": "MEDIUM",
      "description": "Google OAuth Client ID"
    },
    "firebase_key": {
      "regex": "(?i)(AIza[0-9A-Za-z\\-_]{35})",
      "severity": "HIGH",
      "description": "Firebase API Key"
    },
    "mailchimp_api_key": {
      "regex": "(?i)([0-9a-f]{32}-us[0-9]{1,2})",
      "severity": "HIGH",
      "description": "Mailchimp API Key"
    },
    "twilio_api_key": {
      "regex": "(?i)(AC[a-zA-Z0-9]{32})",
      "severity": "HIGH",
      "description": "Twilio Account SID"
    },
    "heroku_api_key": {
      "regex": "(?i)([0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12})",
      "severity": "HIGH",
      "description": "Heroku API Key"
    },
    "auth_bearer_token": {
      "regex": "(?i)(authorization\\s*:\\s*Bearer\\s+[a-zA-Z0-9._-]+)",
      "severity": "MEDIUM",
      "description": "Authorization Bearer Token"
    },
    "base64_secret": {
      "regex": "(?i)(secret|token|key)\\s*[=:]\\s*['\\\"]?(eyJ[A-Za-z0-9_-]+\\.[A-Za-z0-9_-]+\\.[A-Za-z0-9_-]+)['\\\"]?",
      "severity": "MEDIUM",
      "description": "Potential Base64 Encoded Secret"
    }
  }
}